package WConfig;

use Moo;

use Cwd qw( abs_path );
use File::Basename;
# has 'dir' => (
#     is => 'rw',
# );

# sub get_dir {
BEGIN {
    my $dir = dirname(abs_path($INC{'WConfig.pm'}));

    $dir = abs_path( "$dir/.." );
    push @INC, "$dir/lib";
    push @INC, "$dir/app/entities/lib";
    push @INC, "$dir/app/boundaries/lib";
    push @INC, "$dir/app/controllers/lib";
}

1;
