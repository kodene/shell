package Base::Role;

use Moo::Role;
use Types::Standard qw( Bool Str );

has 'is_error' => (
    is      => 'ro',
    isa     => Bool,
    default => 0,
);

has 'message' => (
    is       => 'ro',
    isa      => Str,
    required => 1,
);

has 'data' => (
    is      => 'ro',
    default => '',
);

1;
