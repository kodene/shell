package WSB::Traits;

use Mouse;
use Mouse::Util::TypeConstraints;
use namespace::autoclean;

use URI;

enum 'SoftwareType', [qw(software feature command executable)];
enum 'SoftwareCategory', [qw(library database utility web daemon)];

subtype 'SoftwareURI',
    as class_type 'URI';

coerce 'SoftwareURI',
    from 'Str',
    via { URI->new($_); };

no Mouse::Util::TypeConstraints;
__PACKAGE__->meta->make_immutable;

1;
