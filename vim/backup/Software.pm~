package WSB::Factory::Software;

use Moo;
with 'WSB::Factory';
use WSB::Software;
use Try::Tiny;
use Carp;

sub make {
    my $self = shift;
    my $data = shift;
    my $software;

    try {
        $software = WSB::Software->new( $data );
    } catch {
        carp "Failed to create Software object\nDATA: $data\nERROR: $_";
        $software = undef;
    };

    return $software;
}

1;
