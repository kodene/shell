export AGENT_SOCK=$HOME/.ssh/agent.sock
export AGENT_CFG=$HOME/.ssh/agent.config

agent() {
    local cmd=$1

    case $cmd in
        start)
            if agent_running; then
                source $AGENT_CFG
                return 0
            fi


            ;;
    esac
}

agent_running() {
    local agent_pid=$( pgrep -u $USER ssh-agent )

    if [[ -n $agent_pid ]]; then
        return 0
    fi

    return 1
}

